<!-- res/layout/purchase_history_list_item.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/eventImageView"
        android:layout_width="108dp"
        android:layout_height="115dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/photo_not_found" />

    <TextView
        android:id="@+id/eventDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@id/eventImageView"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- Add any other views you may need for displaying additional details -->

</RelativeLayout>
