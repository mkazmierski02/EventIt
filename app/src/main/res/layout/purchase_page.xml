<!-- res/layout/purchase_page.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PurchasePage">

    <TextView
        android:id="@+id/text1"
        android:layout_width="287dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="42dp"
        android:text="Sfinalizuj zakup biletów"
        android:textSize="24sp"
        android:textStyle="bold" />


    <!-- NumberPicker for adjusting ticket quantity -->


    <TextView
        android:id="@+id/text3"
        android:layout_width="229dp"
        android:layout_height="31dp"
        android:layout_below="@+id/last_name_edit_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="182dp"
        android:text="Wybierz ilość biletów"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="160dp"
        android:text="Podaj swoje dane"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Purchase button -->

    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/text5"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="-12dp"
        android:textColor="#9C27B0"
        android:text="Zakupione bilety wyślemy na wskazany adres.\nUpewnij sie, że e-mail jest poprawny"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/text6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/email_edit_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0dp"
        android:textColor="#9C27B0"
        android:text="Podaj prawdziwe dane osobowe.\nDane te molgą być weryfikowane w chwili wejscia na wydarzenie."
        android:textSize="16sp" />


    <TextView
        android:id="@+id/text7"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="365dp"
        android:text="Imie*"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text8"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_name_edit_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="327dp"
        android:text="Nazwisko*"
        android:textSize="16sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/first_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:hint="Imie"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/last_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text8"
        android:layout_marginTop="0dp"
        android:hint="Nazwisko"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text4"
        android:layout_marginTop="2dp"
        android:hint="Email"
        android:inputType="none"
        android:textSize="16sp" />

    <NumberPicker
        android:id="@+id/ticket_quantity_picker"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_above="@+id/total_price_text_view"
        android:layout_below="@+id/text3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:max="10"
        android:min="1"
        android:textSize="18sp"
        android:value="1" />

    <TextView
        android:id="@+id/total_price_text_view"
        android:layout_width="387dp"
        android:layout_height="30dp"
        android:layout_above="@+id/purchase_button"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:text=""
        android:textSize="18sp" />

    <Button
        android:id="@+id/purchase_button"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="35dp"
        android:text="Zamawiam i płace" />
</RelativeLayout>
